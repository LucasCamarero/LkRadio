<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Internet para streaming -->
    <uses-permission android:name="android.permission.INTERNET"/>

    <!-- Necesario para audio en segundo plano -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE"/>

    <!-- Permiso obligatorio en Android 14+ para servicios de reproducciÃ³n de audio -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_MEDIA_PLAYBACK"/>

    <!-- Android 13+ necesita permiso para notificaciones -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS"/>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.LkRadio">

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.LkRadio">

            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!-- ðŸ”Š Servicio de reproducciÃ³n en segundo plano -->
        <service
            android:name=".MediaPlaybackService"
            android:exported="true"
            android:foregroundServiceType="mediaPlayback">
            <intent-filter>
                <action android:name="androidx.media3.session.MediaSessionService"/>
            </intent-filter>
        </service>

    </application>

</manifest>
